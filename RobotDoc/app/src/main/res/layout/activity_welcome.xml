<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fahimahmed.robotdoc.Welcome"
    android:background="@drawable/redback">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/head3"
        android:background="@android:drawable/dialog_frame"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="4dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="32dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/disanalysis"
        android:background="@drawable/violetbutton"
        android:gravity="center"
        android:textColor="#fdfdfd"
        android:textStyle="bold"
        android:onClick="onanalysis"
        android:layout_below="@+id/head3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="32dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/doclist"
        android:background="@drawable/violetbutton"
        android:gravity="center"
        android:textColor="#fdfdfd"
        android:textStyle="bold"
        android:onClick="ondoc"
        android:layout_below="@+id/disanalysis"
        android:layout_alignStart="@+id/disanalysis"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="32dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/dislist"
        android:background="@drawable/violetbutton"
        android:gravity="center"
        android:textColor="#fdfdfd"
        android:textStyle="bold"
        android:onClick="ondata"
        android:layout_below="@+id/doclist"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="উপসর্গ শনাক্ত"
        android:id="@+id/button4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="onanalysis"
        android:background="@android:drawable/alert_dark_frame"
        android:textColor="#ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="ডাক্তার তালিকা"
        android:id="@+id/button5"
        android:layout_alignTop="@+id/button4"
        android:layout_centerHorizontal="true"
        android:onClick="ondoc"
        android:background="@android:drawable/alert_dark_frame"
        android:textColor="#ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="তথ্য কনিকা "
        android:id="@+id/button6"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="ondata"
        android:background="@android:drawable/alert_dark_frame"
        android:textColor="#ffffff" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/welcom"
        android:layout_above="@+id/head3"
        android:layout_alignParentStart="true" />
</RelativeLayout>

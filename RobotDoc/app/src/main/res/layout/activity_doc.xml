<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fahimahmed.robotdoc.DocActivity"
    android:background="@drawable/redback">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/docplatetext"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/docplate"
        android:gravity="center_vertical|center_horizontal"
        android:textStyle="bold"
        android:textColor="#f8f8f8"
        android:padding="8dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="চেম্বার এর ঠিকানাঃ"
        android:id="@+id/thikana"
        android:layout_below="@+id/docplatetext"
        android:layout_alignParentStart="true"
        android:padding="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:gravity="left|center"
        android:background="@drawable/layerblk" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/thikanaval"
        android:padding="8dp"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:gravity="left|center"
        android:layout_below="@+id/thikana"
        android:layout_alignParentStart="true"
        android:background="@android:drawable/screen_background_dark_transparent" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ইমেইল ঠিকানাঃ"
        android:id="@+id/chithi"
        android:padding="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:gravity="left|center"
        android:layout_below="@+id/thikanaval"
        android:layout_alignParentStart="true"
        android:background="@drawable/layerblk" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/chithival"
        android:padding="8dp"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:gravity="left|center"
        android:layout_below="@+id/chithi"
        android:layout_alignParentStart="true"
        android:background="@android:drawable/screen_background_dark_transparent" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ফোন নাম্বারঃ"
        android:id="@+id/phone"
        android:padding="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:gravity="left|center"
        android:layout_below="@+id/chithival"
        android:layout_alignParentStart="true"
        android:background="@drawable/layerblk" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/phoneval"
        android:padding="8dp"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:gravity="left|center"
        android:layout_below="@+id/phone"
        android:layout_alignParentStart="true"
        android:background="@android:drawable/screen_background_dark_transparent" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="শিক্ষা প্রতিষ্ঠানঃ"
        android:id="@+id/mbbs"
        android:padding="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:gravity="left|center"
        android:layout_below="@+id/phoneval"
        android:layout_alignParentStart="true"
        android:background="@drawable/layerblk" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/mbbsval"
        android:padding="8dp"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:gravity="left|center"
        android:layout_below="@+id/mbbs"
        android:layout_alignParentStart="true"
        android:background="@android:drawable/screen_background_dark_transparent" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="ম্যাপ দেখুন"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="onMapclick"
        android:textColor="#ffffff"
        android:background="@android:drawable/alert_dark_frame" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="ফোন করুন"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onPhoneclick"
        android:textColor="#ffffff"
        android:background="@android:drawable/alert_dark_frame" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="মেসেজ পাঠান "
        android:id="@+id/button3"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/docplatetext"
        android:onClick="onmsgclick"
        android:textColor="#ffffff"
        android:background="@android:drawable/alert_dark_frame" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/msgtext"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="#000000"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:gravity="left"
        android:hint="মেসেজ লিখুন"
        android:layout_below="@+id/mbbsval"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
